<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <!-- Importance Indicator -->
        <View
            android:id="@+id/importanceIndicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="top"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/notification_dot_shape" />

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/memoirTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1A202C"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2dp"
                    tools:text="Ký ức về thời thơ ấu" />

                <TextView
                    android:id="@+id/memoirDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#718096"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="#F7FAFC"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    tools:text="12/08/2024" />

            </LinearLayout>

            <!-- Content Preview -->
            <TextView
                android:id="@+id/memoirContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#4A5568"
                android:maxLines="3"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"
                tools:text="Trong những ngày tháng tuổi thơ, tôi thường ngồi dưới bóng cây bàng cổ thụ trước sân nhà..." />

            <!-- Bottom Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Time Period -->
                <TextView
                    android:id="@+id/memoirTimePeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/memoir_time_period_background"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="6dp"
                    android:textSize="11sp"
                    android:textColor="#4A90E2"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:text="Tuổi thơ" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Categories -->
                <TextView
                    android:id="@+id/memoirCategories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#718096"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:background="@drawable/rounded_background"
                    android:backgroundTint="#F7FAFC"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    tools:text="gia đình • kỷ niệm" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_right"
            android:layout_marginStart="16dp"
            app:tint="#CBD5E0" />

    </LinearLayout>

</androidx.cardview.widget.CardView> 