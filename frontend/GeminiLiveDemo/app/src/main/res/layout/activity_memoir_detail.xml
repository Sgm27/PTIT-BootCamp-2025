<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MemoirDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:id="@+id/memoirTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:lineSpacingExtra="4dp"
                    tools:text="Ký ức về thời thơ ấu bên bà" />

                <!-- Date -->
                <TextView
                    android:id="@+id/memoirDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#A0AEC0"
                    tools:text="Ngày ký ức: 15/05/1975" />

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#E2E8F0" />

                <!-- Content -->
                <TextView
                    android:id="@+id/memoirContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#2D3748"
                    android:lineSpacingExtra="6dp"
                    android:justificationMode="inter_word"
                    tools:text="Trong những ngày tháng tuổi thơ, tôi thường ngồi dưới bóng cây bàng cổ thụ trước sân nhà, lắng nghe những câu chuyện cổ tích mà bà kể. Tiếng bà ru của bà như dòng suối trong veo, đưa tôi vào những giấc mơ đẹp..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Metadata Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin chi tiết"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="12dp" />

                <!-- Time Period -->
                <TextView
                    android:id="@+id/memoirTimePeriod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp"
                    android:textColor="#4A5568"
                    android:visibility="gone"
                    tools:text="Thời kỳ: Tuổi thơ"
                    tools:visibility="visible" />

                <!-- Categories -->
                <TextView
                    android:id="@+id/memoirCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp"
                    android:textColor="#4A5568"
                    android:visibility="gone"
                    tools:text="Chủ đề: gia đình, tuổi thơ, kỷ niệm"
                    tools:visibility="visible" />

                <!-- People Mentioned -->
                <TextView
                    android:id="@+id/memoirPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:textSize="14sp"
                    android:textColor="#4A5568"
                    android:visibility="gone"
                    tools:text="Người được nhắc đến: Bà, Mẹ, Anh Hai"
                    tools:visibility="visible" />

                <!-- Emotional Tone -->
                <TextView
                    android:id="@+id/memoirEmotionalTone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#4A5568"
                    android:visibility="gone"
                    tools:text="Cảm xúc: tích cực"
                    tools:visibility="visible" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView> 