<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Background AI Service"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:id="@+id/serviceStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Background Service: STOPPED\nAI is not listening"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:padding="16dp"
        android:background="@drawable/rounded_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enable Background Listening"
            android:textSize="16sp"
            android:textColor="#FFFFFF" />

        <Switch
            android:id="@+id/serviceToggleSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When enabled, the AI assistant will continue listening for voice commands even when the app is closed or in the background."
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_marginBottom="32dp"
        android:gravity="center" />

    <Button
        android:id="@+id/stopServiceButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Stop Service Completely"
        android:textColor="#FFFFFF"
        android:background="@drawable/enhanced_circle_button_background"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: The background service uses minimal battery and will show a notification while active."
        android:textSize="12sp"
        android:textColor="#999999"
        android:gravity="center"
        android:layout_marginTop="16dp" />

</LinearLayout>
