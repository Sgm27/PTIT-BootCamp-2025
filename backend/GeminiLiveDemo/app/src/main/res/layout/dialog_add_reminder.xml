<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Reminder Type -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reminderTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/reminder_type"
        app:startIconDrawable="@drawable/baseline_category_24"
        app:startIconTint="@color/primary_500"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Reminder Text -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reminderTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/reminder_title"
        app:startIconDrawable="@drawable/baseline_title_24"
        app:startIconTint="@color/primary_500"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Reminder Description -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/reminderDescriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="@string/reminder_description"
        app:startIconDrawable="@drawable/baseline_description_24"
        app:startIconTint="@color/primary_500"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="3" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Family Member -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/familyMemberLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/family_member"
        app:startIconDrawable="@drawable/baseline_person_24"
        app:startIconTint="@color/primary_500"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout> 