<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <!-- Status Bar Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/white" />

        <!-- Header Content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_back_24"
                android:background="@drawable/circle_white_background"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back"
                android:tint="@color/text_primary" />

            <!-- Refresh Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/refreshButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:text="Làm mới"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/secondary_500"
                app:icon="@drawable/baseline_refresh_24"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:cornerRadius="18dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />

            <!-- Add Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/refreshButton"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:text="Thêm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_500"
                app:icon="@drawable/baseline_add_24"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="20dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Main Content with ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="104dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Profile Card with Gradient Background -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_gradient_background"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/elderlyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đức Sơn"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-light" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Schedule Title with Icon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_schedule_24"
                    android:tint="@color/primary_500"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lịch trình"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

            </LinearLayout>

            <!-- Elderly Selection (only visible for family members) -->
            <LinearLayout
                android:id="@+id/elderlySelectionContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:background="@drawable/rounded_input_background"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_person_24"
                    android:tint="@color/text_secondary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn người già:"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginEnd="12dp" />

                <Spinner
                    android:id="@+id/elderlySelectionSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background" />

            </LinearLayout>

            <!-- Loading Progress Bar -->
            <LinearLayout
                android:id="@+id/loadingContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <!-- Error Container -->
            <LinearLayout
                android:id="@+id/errorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:background="@drawable/rounded_error_background"
                android:padding="20dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/baseline_error_outline_24"
                    android:layout_marginBottom="16dp"
                    android:tint="@color/error_500" />

                <TextView
                    android:id="@+id/errorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã xảy ra lỗi"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/retryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thử lại"
                    android:textSize="14sp"
                    app:backgroundTint="@color/primary_500"
                    app:cornerRadius="20dp" />

            </LinearLayout>

            <!-- Empty State Container -->
            <LinearLayout
                android:id="@+id/emptyStateContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:background="@drawable/rounded_empty_background"
                android:padding="32dp">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/baseline_schedule_24"
                    android:layout_marginBottom="16dp"
                    android:tint="@color/text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa có lịch trình nào"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tạo lịch trình đầu tiên để bắt đầu"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tạo lịch trình"
                    android:textSize="14sp"
                    app:backgroundTint="@color/primary_500"
                    app:cornerRadius="20dp"
                    android:onClick="onCreateScheduleClick" />

            </LinearLayout>

            <!-- Content Container -->
            <LinearLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Today Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="@color/primary_500"
                        android:layout_marginEnd="8dp" />

                                    <TextView
                    android:id="@+id/todayDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lịch trình (sắp xếp theo thời gian gần nhất)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/todayScheduleContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp" />

                <!-- Yesterday Section - Hidden since we show all schedules in one section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp"
                    android:visibility="gone">

                    <View
                        android:layout_width="4dp"
                        android:layout_height="20dp"
                        android:background="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/yesterdayDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hôm qua, 06 tháng 8"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/yesterdayScheduleContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />

            </LinearLayout> <!-- End of contentContainer -->

            <!-- Schedule Container -->
            <LinearLayout
                android:id="@+id/scheduleContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout> 