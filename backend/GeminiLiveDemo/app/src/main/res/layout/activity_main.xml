<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Profile Button - Top Left -->
    <FrameLayout
        android:id="@+id/profileButton"
        android:layout_width="@dimen/icon_size_xl"
        android:layout_height="@dimen/icon_size_xl"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginStart="@dimen/spacing_md"
        android:background="@drawable/enhanced_circle_button_background"
        android:elevation="@dimen/elevation_md"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:layout_gravity="center"
            android:src="@drawable/ic_edit_profile"
            app:tint="@color/primary_500"
            android:contentDescription="Profile" />

    </FrameLayout>

    <!-- History Button - Top Center -->
    <FrameLayout
        android:id="@+id/historyButton"
        android:layout_width="@dimen/icon_size_xl"
        android:layout_height="@dimen/icon_size_xl"
        android:layout_marginTop="@dimen/spacing_md"
        android:background="@drawable/enhanced_circle_button_background"
        android:elevation="@dimen/elevation_md"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:layout_gravity="center"
            android:src="@drawable/baseline_history_24"
            app:tint="@color/primary_500"
            android:contentDescription="Conversation History" />

    </FrameLayout>

    <!-- Notification Button - Top Right -->
    <FrameLayout
        android:id="@+id/notificationButton"
        android:layout_width="@dimen/icon_size_xl"
        android:layout_height="@dimen/icon_size_xl"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        android:background="@drawable/enhanced_circle_button_background"
        android:elevation="@dimen/elevation_md"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:layout_gravity="center"
            android:src="@drawable/baseline_notifications_24"
            app:tint="@color/primary_500"
            android:contentDescription="Notifications" />

    </FrameLayout>

    <!-- Avatar Container -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="280dp"
        android:layout_height="320dp"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginBottom="@dimen/spacing_md"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/statusContainer">

        <!-- Avatar Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/enhanced_avatar_placeholder"
            android:elevation="@dimen/elevation_sm"
            android:contentDescription="Avatar" />

        <!-- Status Indicator (overlay on avatar) -->
        <ImageView
            android:id="@+id/statusIndicator"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/spacing_lg"
            android:src="@drawable/baseline_equalizer_24"
            android:background="@drawable/enhanced_circle_background"
            android:padding="@dimen/spacing_sm"
            android:elevation="@dimen/elevation_md"
            app:tint="@color/primary_500"
            android:contentDescription="Status" />

    </FrameLayout>

    <!-- Status and Information Container -->
    <LinearLayout
        android:id="@+id/statusContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_md"
        app:layout_constraintBottom_toTopOf="@id/backgroundServiceControls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </LinearLayout>

    <!-- Chat Log (Hidden by default, can be shown when needed) -->
    <ScrollView
        android:id="@+id/chatLogContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_md"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chatLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_background"
            android:padding="@dimen/padding_component_large"
            android:textSize="@dimen/text_body_sm"
            android:textColor="@color/text_primary"
            android:scrollbars="vertical" />

    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_lg"
        android:paddingEnd="@dimen/spacing_lg"
        android:paddingTop="@dimen/spacing_lg"
        android:paddingBottom="@dimen/spacing_sm"
        android:background="@drawable/bottom_nav_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home Button -->
        <FrameLayout
            android:id="@+id/homeButton"
            android:layout_width="@dimen/button_height_large"
            android:layout_height="@dimen/button_height_large"
            android:layout_marginEnd="@dimen/spacing_lg"
            android:background="@drawable/enhanced_circle_button_background"
            android:elevation="@dimen/elevation_md"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="@dimen/icon_size_md"
                android:layout_height="@dimen/icon_size_md"
                android:layout_gravity="center"
                android:src="@drawable/baseline_home_24"
                app:tint="@color/primary_500"
                android:contentDescription="Home" />

        </FrameLayout>

        <!-- Center Camera/QR Button (larger) -->
        <FrameLayout
            android:id="@+id/captureButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/enhanced_large_circle_button_background"
            android:elevation="@dimen/elevation_lg"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="@dimen/icon_size_lg"
                android:layout_height="@dimen/icon_size_lg"
                android:layout_gravity="center"
                android:src="@drawable/baseline_qr_code_scanner_24"
                app:tint="@color/white"
                android:contentDescription="Camera/QR Scanner" />

        </FrameLayout>

        <!-- Mic Button -->
        <FrameLayout
            android:id="@+id/micButton"
            android:layout_width="@dimen/button_height_large"
            android:layout_height="@dimen/button_height_large"
            android:layout_marginStart="@dimen/spacing_lg"
            android:background="@drawable/enhanced_circle_button_background"
            android:elevation="@dimen/elevation_md"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/micIcon"
                android:layout_width="@dimen/icon_size_md"
                android:layout_height="@dimen/icon_size_md"
                android:layout_gravity="center"
                android:src="@drawable/baseline_mic_24"
                app:tint="@color/primary_500"
                android:contentDescription="Microphone" />

        </FrameLayout>

    </LinearLayout>

    <!-- Background Service Controls -->
    <LinearLayout
        android:id="@+id/backgroundServiceControls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_md"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/backgroundServiceButton"
            android:layout_width="@dimen/icon_size_xl"
            android:layout_height="@dimen/icon_size_xl"
            android:layout_marginEnd="@dimen/spacing_md"
            android:background="@drawable/enhanced_circle_button_background"
            android:elevation="@dimen/elevation_md"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/backgroundServiceIcon"
                android:layout_width="@dimen/icon_size_md"
                android:layout_height="@dimen/icon_size_md"
                android:layout_gravity="center"
                android:src="@drawable/ic_mic"
                app:tint="@color/primary_500"
                android:contentDescription="Background Service" />

        </FrameLayout>

        <TextView
            android:id="@+id/backgroundServiceStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Background Listening: OFF"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_body_sm"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Hidden buttons for backward compatibility -->
    <Button
        android:id="@+id/startButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>