<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_screen_large"
    android:background="@drawable/gradient_background"
    android:gravity="center">

    <!-- Logo and Title -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/app_logo"
        android:layout_marginBottom="@dimen/spacing_md"
        android:contentDescription="VCareMind Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VCareMind"
        android:textSize="@dimen/text_title_lg"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="@dimen/spacing_sm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trợ lý chăm sóc sức khỏe thông minh"
        android:textSize="@dimen/text_body"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="@dimen/spacing_xl"
        android:gravity="center" />

    <!-- Login Form Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/radius_lg"
        app:cardElevation="@dimen/elevation_md"
        android:layout_marginBottom="@dimen/spacing_lg"
        style="@style/Widget.GeminiLiveDemo.Card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_component_xl">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:layout_gravity="center" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/errorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/error_background"
                android:padding="@dimen/padding_component"
                android:textColor="@color/error_500"
                android:textSize="@dimen/text_body_sm"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Email/Phone Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                style="@style/Widget.GeminiLiveDemo.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/identifierEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email hoặc số điện thoại"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/text_body" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Password Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                app:passwordToggleEnabled="true"
                style="@style/Widget.GeminiLiveDemo.TextInputLayout">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:textSize="@dimen/text_body" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:text="Đăng nhập"
                android:textSize="@dimen/text_body"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/spacing_md"
                style="@style/Widget.GeminiLiveDemo.Button" />

            <!-- Register Link -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/spacing_md">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa có tài khoản? "
                    android:textSize="@dimen/text_body_sm"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/registerLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký ngay"
                    android:textSize="@dimen/text_body_sm"
                    android:textColor="@color/primary_500"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout> 