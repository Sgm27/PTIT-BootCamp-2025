<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Importance Indicator -->
    <View
        android:id="@+id/importanceIndicator"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="top"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/notification_dot_shape" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Title and Date Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/memoirTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Ký ức về thời thơ ấu" />

            <TextView
                android:id="@+id/memoirDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#A0AEC0"
                android:layout_marginLeft="8dp"
                tools:text="12/08/2024" />

        </LinearLayout>

        <!-- Content Preview -->
        <TextView
            android:id="@+id/memoirContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:textColor="#4A5568"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            tools:text="Trong những ngày tháng tuổi thơ, tôi thường ngồi dưới bóng cây bàng cổ thụ trước sân nhà..." />

        <!-- Bottom Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Time Period -->
            <TextView
                android:id="@+id/memoirTimePeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/memoir_time_period_background"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:textSize="10sp"
                android:textColor="#4A90E2"
                android:visibility="gone"
                tools:text="Tuổi thơ" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Categories -->
            <TextView
                android:id="@+id/memoirCategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#A0AEC0"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="gia đình • kỷ niệm" />

        </LinearLayout>

    </LinearLayout>

    <!-- Arrow Icon -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_arrow_right"
        android:layout_marginLeft="8dp" />

</LinearLayout> 