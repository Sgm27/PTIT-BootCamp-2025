<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF7B7B"
                android:endColor="#FF9999"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- User icon -->
    <item android:drawable="@drawable/ic_edit_profile"
        android:width="40dp"
        android:height="40dp"
        android:gravity="center" />
</layer-list>
