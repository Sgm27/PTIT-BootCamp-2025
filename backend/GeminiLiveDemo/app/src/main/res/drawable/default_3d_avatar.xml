<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background circle with light blue gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="140dp"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#E3F2FD"
                android:centerColor="#BBDEFB"
                android:endColor="#90CAF9" />
        </shape>
    </item>
    
    <!-- Body/Shirt outline -->
    <item android:top="80dp" android:bottom="20dp" android:left="60dp" android:right="60dp">
        <shape android:shape="oval">
            <solid android:color="#F5F5F5" />
            <stroke android:width="2dp" android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Face outline -->
    <item android:top="40dp" android:bottom="60dp" android:left="50dp" android:right="50dp">
        <shape android:shape="oval">
            <solid android:color="#FFE0B2" />
            <stroke android:width="2dp" android:color="#FFCC80" />
        </shape>
    </item>
    
    <!-- Hair - Brown short hair styled upwards -->
    <item android:top="25dp" android:left="55dp" android:right="55dp" android:bottom="75dp">
        <shape android:shape="oval">
            <solid android:color="#5D4037" />
        </shape>
    </item>
    
    <!-- Hair detail - styled upwards -->
    <item android:top="20dp" android:left="60dp" android:right="60dp" android:bottom="70dp">
        <shape android:shape="oval">
            <solid android:color="#8D6E63" />
        </shape>
    </item>
    
    <!-- Hair spikes -->
    <item android:top="15dp" android:left="65dp" android:right="65dp" android:bottom="65dp">
        <shape android:shape="oval">
            <solid android:color="#6D4C41" />
        </shape>
    </item>
    
    <!-- Eyes - Dark brown -->
    <item android:top="75dp" android:left="70dp" android:right="120dp" android:bottom="105dp">
        <shape android:shape="oval">
            <solid android:color="#3E2723" />
        </shape>
    </item>
    
    <item android:top="75dp" android:left="120dp" android:right="70dp" android:bottom="105dp">
        <shape android:shape="oval">
            <solid android:color="#3E2723" />
        </shape>
    </item>
    
    <!-- Eyebrows - subtle -->
    <item android:top="70dp" android:left="65dp" android:right="125dp" android:bottom="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#5D4037" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <item android:top="70dp" android:left="115dp" android:right="65dp" android:bottom="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#5D4037" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Nose - subtle -->
    <item android:top="95dp" android:left="95dp" android:right="95dp" android:bottom="105dp">
        <shape android:shape="oval">
            <solid android:color="#FFCC80" />
        </shape>
    </item>
    
    <!-- Mouth - friendly smile -->
    <item android:top="110dp" android:left="85dp" android:right="85dp" android:bottom="120dp">
        <shape android:shape="oval">
            <solid android:color="#D84315" />
        </shape>
    </item>
    
    <!-- Cheeks - subtle blush -->
    <item android:top="100dp" android:left="65dp" android:right="105dp" android:bottom="110dp">
        <shape android:shape="oval">
            <solid android:color="#FFCDD2" />
        </shape>
    </item>
    
    <item android:top="100dp" android:left="105dp" android:right="65dp" android:bottom="110dp">
        <shape android:shape="oval">
            <solid android:color="#FFCDD2" />
        </shape>
    </item>
    
    <!-- Neck -->
    <item android:top="120dp" android:left="70dp" android:right="70dp" android:bottom="140dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE0B2" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    
    <!-- Shirt collar -->
    <item android:top="135dp" android:left="65dp" android:right="65dp" android:bottom="145dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="#E0E0E0" />
        </shape>
    </item>
    
</layer-list> 